{
    "name": "ntzm/useless-comment-finder",
    "type": "application",
    "description": "A tool to find potentially useless comments in PHP code",
    "license": "MIT",
    "authors": [
        {
            "name": "Nat Zimmermann",
            "email": "nat@ntzm.io"
        }
    ],
    "require": {
        "php": ">= 7.1",
        "ext-tokenizer": "*",
        "symfony/console": "^3.3",
        "symfony/finder": "^3.3",
        "symfony/stopwatch": "^3.3"
    },
    "autoload": {
        "psr-4": {
            "Ntzm\\UselessCommentFinder\\": "src/"
        }
    },
    "require-dev": {
        "codeclimate/php-test-reporter": "^0.4.4",
        "friendsofphp/php-cs-fixer": "^2.5",
        "phpunit/phpunit": "^6.2"
    },
    "autoload-dev": {
        "psr-4": {
            "Ntzm\\Tests\\UselessCommentFinder\\": "tests/"
        }
    },
    "bin": [
        "bin/useless-comment-finder"
    ],
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
